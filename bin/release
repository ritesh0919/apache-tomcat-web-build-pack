#!/usr/bin/env bash
# bin/release <build-dir>

#echo -e "---\ndefault_process_types:\n  web: sh boot.sh"
  ---
  default_process_types:
    web: JAVA_HOME=$HOME/jdk1.8.0_25 JAVA_OPTS="-Djava.io.tmpdir=$TMPDIR
    -XX:OnOutOfMemoryError=$HOME/jdk1.8.0_25/bin/killjava.sh -Xmx382293K
    -Xms382293K -XX:MaxPermSize=64M -XX:PermSize=64M -Xss995K -Dhttp.port=$PORT"
    $HOME/tomcat/bin/catalina.sh run
